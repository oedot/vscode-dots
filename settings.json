{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.tabSize": 4,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "storage.type.class.doxygen",
                "settings": {
                    "foreground": "#6272A4"
                }
            },
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": ""
